{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true,
    "mocha": true,
    "jquery": true
  },
  "globals": {
    "Player": true,
    "Ajv": true,
    "PasswordGen": true,
    "_": true,
    "recorder": true,
    "Recorder": true,
    "blueprintStorageAccess": true,
    "BlueprintStorageAccess": true,
    "Badge": true,
    "HashTable": true,
    "portToLegacyAddOn": true,
    "Utils": true,
    "Argon2": true,
    "Salsa20": true,
    "require": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "off",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-console": [
      "warn"
    ],
    "no-case-declarations": [
      "warn"
    ]
  }
}